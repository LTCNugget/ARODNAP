{
  "manifest_version": 2,
  "name": "ARODNAP",
  "description": "This extension will take the album art and .m4a of a Pandora.com page",
  "version": "0.5",
  "browser_action": {
    "default_icon": "img/icon48.png"
  },
  "icons": {
    "48": "img/icon48.png"
  },
  "content_scripts": [ {
    "js": ["js/content.js", "js/jQuery.js"],
    "matches": ["<all_urls>"]
  } ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "activeTab", "tabs", "https://*.googleapis.com/*"
  ]
}
